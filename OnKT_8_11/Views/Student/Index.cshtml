@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model IEnumerable<Student>
@* html tag helper *@
<a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create Student</a>
@* html thuan *@
@* <a href="/Admin/Student/Add" class="btn btn-primary">Create Student 2</a> *@
@* html tag helper *@
@* <a asp-route="list" class="btn btn-primary">Create Student 3</a> *@


<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBorth</td>
                @{
                    string str = "";
                    switch (s.Branch)

                    {

                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";

                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>
                    @if (s.ImageURL != null)
                    {
                        <img src="/upload/@s.ImageURL.FileName" alt="IMAGES" class="img-thumbnail">
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@*section doi mau vang khi click vao table*@
@section Scripts{
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
            table.style = "background-color: yellow;"
        }
    </script>
}